<module>
	<adapter name="DemoAdapterPart1" active="${DemoAdapterPart1.active}">
		
		<receiver
			name="Receiver"
			className="nl.nn.adapterframework.receivers.GenericReceiver">
			<listener
				name="MyListener"
				className="nl.nn.adapterframework.receivers.JavaListener"/>
		</receiver>
		
		<pipeline firstPipe="saveFileName">
			<exits>
				<exit path="EXIT" state="success"/>
			</exits>
			
 			<pipe
				name="saveFileName"
				className="nl.nn.adapterframework.pipes.EchoPipe"
				storeResultInSessionKey="fileName"
				>
			</pipe>

 			<pipe
				name="FilePipe"
				className="nl.nn.adapterframework.pipes.FilePipe"
				directory="C:\Users\Robert\Desktop\test files\"
				actions="read"
				outputType="stream"
				storeResultInSessionKey="fileFromDesktop"
				>
			</pipe>

			<pipe
				name="S3SendingPipe"
				getInputFromFixedValue="test"
				className="nl.nn.adapterframework.pipes.GenericMessageSendingPipe">
				<sender	name="S3Sender"
						className="nl.nn.adapterframework.senders.S3Sender"
						bucketCreationEnabled="true"
						actions="mkBucket,upload,copy"
						bucketName="robert-demo-bucket"
						>
						<param name="objectKey" sessionKey="fileName"/>
						<param name="file" sessionKey="fileFromDesktop"/>
						<param name="destinationBucketName" value="robert-demo-bucket-n2"/>
						<param name="destinationObjcetKey" value="copiedObject"/>
				</sender>
				
   				<forward name="success" path="EXIT" />
			</pipe>	
			
		</pipeline>
			
	</adapter>
</module>
