<module>
	<adapter name="TestAdapter" active="${TestAdapter.active}">
		<receiver
			name="Receiver"
			className="nl.nn.adapterframework.receivers.GenericReceiver">
			<listener
				name="MyListener"
				className="nl.nn.adapterframework.receivers.JavaListener"/>
		</receiver>
		
		<pipeline firstPipe="saveFileName">
			<exits>
				<exit path="EXIT" state="success"/>
			</exits>
			
 			<pipe
				name="saveFileName"
				className="nl.nn.adapterframework.pipes.EchoPipe"
				storeResultInSessionKey="mijnMooieNaam"
				>
			</pipe>

 			<pipe
				name="FilePipe"
				className="nl.nn.adapterframework.pipes.FilePipe"
				directory="C:\Users\Robert\Desktop\"
				actions="read"
				outputType="stream"
				storeResultInSessionKey="mijnMooieFile"
				>
			</pipe>

			<pipe
				name="SendingPipe"
				getInputFromFixedValue="test"
				className="nl.nn.adapterframework.pipes.GenericMessageSendingPipe">
				<sender name="S3Sender"
						className="nl.nn.adapterframework.senders.S3Sender"
						clientRegion="us-west-1"
						bucketName="robert-test-bucket"
						objectKey="OutputFromS3Sender">
						<param name="file" sessionKey="mijnMooieFile" />
						<param name="objectKey" sessionKey="mijnMooieNaam" />
					</sender>
   				<forward name="success" path="EXIT" />
			</pipe>
			
		</pipeline>	
	</adapter>
</module>
